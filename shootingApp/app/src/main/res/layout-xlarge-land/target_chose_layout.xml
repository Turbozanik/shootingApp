<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/targetChooseBackgroundIv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_target"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/precisionMode30mButton"
        android:layout_marginRight="180dp"
        android:layout_marginEnd="180dp"
        android:layout_toLeftOf="@id/precisionMode50mButton"
        android:layout_toStartOf="@id/precisionMode50mButton"
        android:layout_alignTop="@id/precisionMode50mButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/precisionMode25mButton"
        android:layout_toLeftOf="@id/precisionMode30mButton"
        android:layout_toStartOf="@id/precisionMode30mButton"
        android:layout_alignTop="@id/precisionMode30mButton"
        android:layout_marginRight="240dp"
        android:layout_marginEnd="240dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/precisionMode50mButton"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CloseImageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/close_red"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>